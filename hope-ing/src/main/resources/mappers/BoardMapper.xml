<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hopeing.mappers.BoardMapper">
	<!-- 게시글의 좋아요 수 업데이트 -->
	<update id="updateBoardLikeCount" parameterType="boardVO">
		UPDATE TBL_BOARD
		SET LIKE_COUNT = #{like_count}
		WHERE BOARD_NO = #{board_no}
	</update>
	<sql id="criteria">
		<if test="type != null and keyword != null">
			<trim prefix="AND (" suffix=")" prefixOverrides="OR">
				<foreach item="type" collection="typeArr">
					<trim prefix="OR">
						<choose>
							<when test="type == 'T'.toString()">
								(TITLE LIKE CONCAT('%', #{keyword}, '%'))
							</when>
							<when test="type == 'C'.toString()">
								(CONTENT LIKE CONCAT('%', #{keyword}, '%'))
							</when>
							<when test="type == 'W'.toString()">
								(WRITER LIKE CONCAT('%', #{keyword}, '%'))
							</when>
						</choose>
					</trim>
				</foreach>
			</trim>
		</if>
	</sql>
	<!-- 게시글 갯수 -->
	<select id="getTotal" resultType="_int">
		SELECT COUNT(*) FROM TBL_BOARD WHERE
		<![CDATA[
		BOARD_NO > 0
		]]>
		<include refid="criteria"></include>
	</select>
	<!-- 게시글 목록 페이징 -->
	<select id="getListWithPaging" resultType="boardVO">
		<![CDATA[
		SELECT * FROM TBL_BOARD a
		WHERE BOARD_NO > 0
		]]>
		<include refid="criteria"></include>
		<![CDATA[
		ORDER BY BOARD_NO DESC
		LIMIT #{limit} OFFSET #{offset}
		]]>
	</select>
	<!-- 게시글 삭제 -->
	<delete id="delete">
		DELETE FROM TBL_BOARD
		WHERE BOARD_NO = #{board_no}
	</delete>
	<!-- 게시글 수정 -->
	<update id="update" parameterType="boardVO">
		UPDATE TBL_BOARD
		SET BOARD_TITLE = #{board_title}, BOARD_CONTENT = #{board_content}
		WHERE BOARD_NO = #{board_no}
	</update>
	<!-- 조회수 -->
	<update id="viewsUpdate">
	    UPDATE TBL_BOARD
	    SET BOARD_VIEWS = board_views + 1
	    WHERE BOARD_NO = #{board_no}
	</update>
	<!-- 게시글 조회 -->
	<select id="read" resultType="boardVO">
		SELECT * FROM TBL_BOARD
		WHERE BOARD_NO = #{board_no}
	</select>
	<!-- 글 등록 -->
	<insert id="register" parameterType="boardVO">
		INSERT INTO TBL_BOARD (BOARD_TITLE, BOARD_CONTENT, BOARD_WRITER_ID)
		VALUES (#{board_title}, #{board_content}, #{board_writer_id})
	</insert>
	<!-- 게시판 목록 -->
	<select id="getList" resultType="boardVO">
		<![CDATA[
		SELECT * FROM TBL_BOARD a
		WHERE BOARD_NO > 0
		ORDER BY BOARD_NO DESC
		]]>
	</select>
</mapper>